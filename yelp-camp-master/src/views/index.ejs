<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width= device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>CapmZzz</title>
</head>
<style>
    .img-thumbnail img{
        width: 245px;
        height: 200px;
    }

    .img-thumbnail{
        margin-bottom: 10px;
    }

    .container-fluid{
        display: flex;
    }

    .navbar-header{
        flex: 100;
    }

    .navbar-nav > li{
        margin-left:30px;
        margin-right:30px;
    }
    
</style>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <div class="navbar-header">
              <a class="navbar-brand" href="/campgrounds">CampZzz</a>
            </div>
            <div class="collapse navbar-collapse" >
                <ul class="nav navbar-nav navbar-right">
                    <% if(!currentUser){ %>
                        <li class="nav-item"><a href="/login">Login</a></li>
                        <li class="nav-item"><a href="/register">SignUp</a></li>
                    <% } else { %>
                        <li>Signed in as <%= currentUser.username %></li>
                        <li class="nav-item"><a href="/logout">Logout</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to Camp Ground!</h1>
                <p>View our hand-picked campground from all over the world</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new CampGround</a>
                </p>
            </div>
        </header>

        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="img-thumbnail">
                        <img  src="<%= campground.image %>">
                        <div class="caption">
                            <h4><%= campground.name %></h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>






